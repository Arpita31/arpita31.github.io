---
// src/components/ProjectCard.astro
export interface Props {
  project: {
    id: string;
    title: string;
    description: string;
    image: {
      src: string;
      alt: string;
    };
    technologies: string[];
    links: {
      github: string;
      demo: string;
      article: string;
    };
  };
}

const { project } = Astro.props;
---

<div class="project-card">
  <div class="project-image">
    <img 
      src={project.image.src} 
      alt={project.image.alt}
      loading="lazy"
    />
    <div class="image-overlay">
      <span>View Project</span>
    </div>
  </div>
  
  <div class="project-content">
    <h3>{project.title}</h3>
    <p>{project.description}</p>
    
    <div class="technologies">
      {project.technologies.map(tech => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>
    
    <div class="project-links">
      <a href={project.links.github} class="link">GitHub →</a>
      <a href={project.links.demo} class="link">Live Demo →</a>
      <a href={project.links.article} class="link">Article →</a>
    </div>
  </div>
</div>

<style>
  .project-card {
    background: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #333;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(255, 20, 147, 0.1);
  }
  
  .project-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .project-card:hover .project-image img {
    transform: scale(1.05);
  }
  
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 20, 147, 0.8), rgba(147, 51, 234, 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .project-card:hover .image-overlay {
    opacity: 1;
  }
  
  .image-overlay span {
    color: white;
    font-weight: bold;
    font-size: 1.1rem;
  }
  
  .project-content {
    padding: 1.5rem;
  }
  
  .project-content h3 {
    color: white;
    margin-bottom: 1rem;
    font-size: 1.3rem;
    line-height: 1.3;
  }
  
  .project-content p {
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .tech-tag {
    background: #333;
    color: #64b5f6;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .project-links {
    display: flex;
    gap: 1rem;
  }
  
  .link {
    color: #ff1493;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  
  .link:hover {
    color: #ff69b4;
  }
</style>