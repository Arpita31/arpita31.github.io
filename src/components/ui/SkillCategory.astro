---
export interface Props {
  category: {
    id: string;
    icon: string;
    title: string;
    skills: string[];
  };
}

const { category } = Astro.props;
---

<div class="skill-category">
  <h3>{category.icon} {category.title}</h3>
  <div class="skill-tags">
    {category.skills.map(skill => (
      <span class="skill-tag">{skill}</span>
    ))}
  </div>
</div>